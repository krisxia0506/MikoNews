feishu:
  # 可通过环境变量 FEISHU_APP_ID 覆盖
  app_id: "your_app_id"
  # 可通过环境变量 FEISHU_APP_SECRET 覆盖
  app_secret: "your_app_secret"
  # 可通过环境变量 FEISHU_VERIFICATION_TOKEN 覆盖
  verification_token: "your_verification_token"
  # 可通过环境变量 FEISHU_ENCRYPT_KEY 覆盖
  encrypt_key: "your_encrypt_key"

# 数据库配置（所有选项均可通过环境变量覆盖）
database:
  # 可通过环境变量 DB_HOST 覆盖
  host: "localhost"
  # 可通过环境变量 DB_PORT 覆盖
  port: 3306
  # 可通过环境变量 DB_USER 覆盖
  user: "miko_news"
  # 可通过环境变量 DB_PASSWORD 覆盖
  password: "your_password"
  # 可通过环境变量 DB_NAME 覆盖
  dbname: "miko_news"
  max_open_conns: 10
  max_idle_conns: 5
  
# 服务器配置
server:
  # 可通过环境变量 PORT 覆盖
  port: 8080
  # 群ID列表，用于发送稿件（可通过环境变量 GROUP_CHATS 覆盖，多个群ID用逗号分隔）
  group_chats:
    - "oc_xxxxxxxxxxxxxxxx"  # 替换为实际的群聊ID

# 日志配置
logger:
  # 可通过环境变量 LOG_LEVEL 覆盖 (可选值: debug, info, warn, error, dpanic, panic, fatal)
  level: "info"
  # 可通过环境变量 LOG_PATH 覆盖
  path: "./logs/miko_news.log" 